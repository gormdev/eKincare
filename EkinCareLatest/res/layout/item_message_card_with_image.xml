<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:id="@+id/view_group_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/image_view_avatar"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:src="@drawable/icons_chat_logo" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background_first"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_background2"
            android:layout_width="@dimen/margin_100"
            android:layout_height="@dimen/margin_100"
            app:civ_border_width="@dimen/margin_1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_16"
            app:civ_border_color="#707070"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_8"
            android:background="@color/card_background_first"
            android:gravity="top"
            android:orientation="vertical">

            <com.ekincare.util.RobotoTextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Phalguna Rao"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_18"
                fab:typeface="roboto_regular"/>

            <com.ekincare.util.RobotoTextView
                android:id="@+id/textview_discription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="@dimen/margin_5"
                android:text="Sub Header"
                android:textColor="@color/card_second"
                android:textSize="@dimen/textsize_16"
                fab:typeface="roboto_regular"/>
            <com.ekincare.util.RobotoTextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/textview_specialities"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Sub Header"
                android:textColor="@color/card_second"
                android:textSize="@dimen/textsize_16"
                fab:typeface="roboto_regular"/>
            <com.ekincare.util.RobotoTextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/textview_language"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Sub Header"
                android:textColor="@color/card_second"
                android:textSize="@dimen/textsize_16"
                fab:typeface="roboto_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/card_background_second"
            android:gravity="left"
            android:padding="@dimen/margin_8"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5">
                <com.ekincare.util.RobotoTextView
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:layout_weight="0.5"
                    android:background="?attr/selectableItemBackground"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="center"
                    android:padding="@dimen/margin_8"
                    android:text="Consult Fee"
                    android:textColor="@color/card_second"
                    android:textSize="@dimen/textsize_12"
                    fab:typeface="roboto_regular"/>
                <com.ekincare.util.RobotoTextView
                    android:id="@+id/button1_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:layout_weight="0.5"
                    android:background="?attr/selectableItemBackground"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/margin_8"
                    android:gravity="center"
                    android:textColor="@color/card_first"
                    android:textSize="@dimen/textsize_16"
                    fab:typeface="roboto_regular"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5">
                <com.ekincare.util.RobotoTextView
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/margin_8"
                    android:text="Query Fee"
                    android:textColor="@color/card_second"
                    android:textSize="@dimen/textsize_12"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    fab:typeface="roboto_regular"/>
                <com.ekincare.util.RobotoTextView
                    android:id="@+id/button2_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/margin_8"
                    android:gravity="center"
                    android:textColor="@color/card_first"
                    android:textSize="@dimen/textsize_16"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    fab:typeface="roboto_regular"/>

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

