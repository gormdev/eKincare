<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_16"
        android:paddingTop="@dimen/margin_16"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_8"
            android:padding="@dimen/margin_8"
            android:scaleType="fitXY"
            android:src="@drawable/ic_lifestyle_icon"/>

        <com.ekincare.util.RobotoTextView
            style="@style/TvBlack18"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="Lifestyle Information"
            android:textColor="@color/light_gray"
            fab:typeface="roboto_medium" />
    </LinearLayout>

    <ImageView
        style="@style/ImgSeperatorGray"
        android:layout_height="@dimen/margin_1"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:orientation="horizontal">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spinner_daily_active"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            fab:ms_hint="Daily Active"
            android:textColorHint="@color/secondary_text_color"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/font_16"
            android:layout_marginRight="@dimen/margin_8"/>

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spinner_exercise"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            fab:ms_hint="Exercise"
            android:textColorHint="@color/teal"
            android:textSize="@dimen/font_16"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:orientation="horizontal">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spinner_smoking"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            fab:ms_hint="Smoke"
            android:textColorHint="@color/secondary_text_color"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/font_16"
            android:layout_marginRight="@dimen/margin_8"/>

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spinner_alcohol"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            fab:ms_hint="Alcohol"
            android:textColorHint="@color/teal"
            android:textSize="@dimen/font_16" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spinner_diet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            fab:ms_hint="Diet"
            android:textColorHint="@color/secondary_text_color"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/font_16"/>

    </LinearLayout>

</LinearLayout>