<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="48dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="@dimen/margin_8"
        android:padding="@dimen/margin_8"
        android:layout_alignParentRight="true"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:contentPadding="0dp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_background_first"
            android:backgroundTint="@color/card_background_first"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_4"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/allergy_icon"
                android:visibility="gone"
                android:drawSelectorOnTop="true"/>

            <com.ekincare.util.RobotoTextView
                android:id="@+id/textview_title"
                android:textSize="@dimen/textsize_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:maxLines="1"
                tools:text="aa"
                android:textAllCaps="true"
                android:padding="@dimen/margin_8"
                android:background="@color/card_background_second"
                android:textColor="@color/card_first"
                android:duplicateParentState="true"
                app:typeface="roboto_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_4">

                <com.ekincare.util.RobotoTextView
                    android:textSize="@dimen/textsize_12"
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Distance: "
                    android:layout_marginRight="@dimen/margin_8"
                    android:textColor="@color/card_second"
                    app:typeface="roboto_light" />

                <com.ekincare.util.RobotoTextView
                    android:id="@+id/textview_distance"
                    android:textSize="@dimen/textsize_12"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    tools:text="aaaaaaaaaaaa"
                    android:textColor="@color/card_second"
                    app:typeface="roboto_light" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_8"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_4">

                <com.ekincare.util.RobotoTextView
                    android:id="@+id/textview_label"
                    android:textSize="@dimen/textsize_12"
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/margin_8"
                    android:textColor="@color/white"
                    app:typeface="roboto_light" />

                <com.ekincare.util.RobotoTextView
                    android:id="@+id/textview_address1"
                    android:textSize="@dimen/textsize_12"
                    android:layout_width="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/textview_label"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    tools:text="qqqqqqqq"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    app:typeface="roboto_light" />

                <com.ekincare.util.RobotoTextView
                    android:id="@+id/textview_address2"
                    android:textSize="@dimen/textsize_12"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/textview_label"
                    android:layout_below="@id/textview_address1"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textview_address1"
                    tools:text="aaaaaaaaaaaa"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    app:typeface="roboto_light" />

                <com.ekincare.util.RobotoTextView
                    android:id="@+id/textview_address3"
                    android:textSize="@dimen/textsize_12"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/textview_label"
                    android:layout_below="@id/textview_address2"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:layout_alignLeft="@id/textview_address2"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    tools:text="aa"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    app:typeface="roboto_light" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_4">

                <com.ekincare.util.RobotoTextView
                    android:textSize="@dimen/textsize_12"
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Contact: "
                    android:layout_marginRight="@dimen/margin_8"
                    android:textColor="@color/white"
                    app:typeface="roboto_light" />

                <com.ekincare.util.RobotoTextView
                    android:id="@+id/textview_phone"
                    android:textSize="@dimen/textsize_12"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    app:typeface="roboto_light" />

            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/view_group_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_centerVertical="true"
        android:background="@color/transparent">

        <ImageView
            android:scaleType="centerInside"
            android:tint="@color/color_primary_family_member"
            android:src="@drawable/ic_done_white_24dp"
            android:id="@+id/image_view_status"
            android:layout_width="@dimen/margin_15"
            android:layout_height="@dimen/margin_15"/>
    </FrameLayout>
</RelativeLayout>