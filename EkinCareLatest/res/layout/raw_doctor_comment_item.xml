<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/row_doctor_name_comment_ll_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.ekincare.util.RalewayTextViewMedium
            android:id="@+id/row_doctor_name_comment_lable_text"
            style="@style/TvBlack18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Doctor Name "
            android:textColor="@color/black"
            card_view:ralewaytypeface="raleway_medium" />

        <com.ekincare.util.RalewayTextViewMedium
            android:id="@+id/row_doctor_name_comment_value_txt"
            style="@style/TvBlack14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:layout_weight="1"
            android:textColor="@color/light_gray" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/row_doctor_name_comment_ll_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_doctor_name_comment_ll_name"
        android:orientation="vertical"
        android:visibility="visible">

        <com.ekincare.util.RalewayTextViewMedium
            android:id="@+id/row_doctor_name_des_lable_text"
            style="@style/TvBlack18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:gravity="left"
            android:text="Description "
            android:textColor="@color/black"
            card_view:ralewaytypeface="raleway_medium" />

        <com.ekincare.util.RalewayTextViewMedium
            android:id="@+id/row_doctor_name_des_value_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_doctor_name_des_lable_text"
            android:layout_margin="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:textColor="@color/light_gray" />
    </RelativeLayout>

</RelativeLayout>