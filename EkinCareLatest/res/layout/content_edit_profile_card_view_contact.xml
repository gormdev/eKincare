<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_16"
        android:paddingTop="@dimen/margin_16"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_8"
            android:padding="@dimen/margin_8"
            android:scaleType="fitXY"
            android:src="@drawable/ic_call_black_24dp" />

        <com.ekincare.util.RobotoTextView
            style="@style/TvBlack18"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="Contact Information"
            android:textColor="@color/light_gray"
            fab:typeface="roboto_medium" />
    </LinearLayout>

    <ImageView
        style="@style/ImgSeperatorGray"
        android:layout_height="@dimen/margin_1"
        android:visibility="visible" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/floating_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:inputType="text|textCapWords"
            android:maxLength="40"
            android:maxLines="1"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/black"
            android:textColorHint="@color/secondary_text_color"
            android:textCursorDrawable="@null"
            android:textIsSelectable="false"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/floating_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_text_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="40"
            android:maxLines="1"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/card_second"
            android:textColorHint="@color/secondary_text_color"
            android:textCursorDrawable="@null"
            android:textIsSelectable="false"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/floating_address_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_text_address_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address(Line 1)"
            android:imeOptions="actionNext"
            android:inputType="text|textCapWords"
            android:maxLines="1"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/black"
            android:textColorHint="@color/secondary_text_color"
            android:textCursorDrawable="@null"
            android:textIsSelectable="false"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/floating_address_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_text_address_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address(Line 2)"
            android:imeOptions="actionNext"
            android:inputType="text|textCapWords"
            android:maxLines="1"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/black"
            android:textColorHint="@color/secondary_text_color"
            android:textCursorDrawable="@null"
            android:textIsSelectable="false"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/floating_city"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_8">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:imeOptions="actionNext"
                android:inputType="text|textCapWords"
                android:maxLines="1"
                android:textSize="@dimen/textsize_16"
                android:textColor="@color/black"
                android:textColorHint="@color/secondary_text_color"
                android:textCursorDrawable="@null"
                android:textIsSelectable="false"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/floating_state"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:imeOptions="actionNext"
                android:textSize="@dimen/textsize_16"
                android:inputType="text|textCapWords"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/secondary_text_color"
                android:textCursorDrawable="@null"
                android:textIsSelectable="false"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/floating_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_text_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pincode"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/black"
            android:textColorHint="@color/secondary_text_color"
            android:textCursorDrawable="@null"
            android:textIsSelectable="false"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>