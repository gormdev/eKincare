<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/container_layout"
    android:gravity="center"
    android:layout_margin="@dimen/margin_8"
    android:background="@drawable/selector_bottom_sheet_circular_row">

    <com.ekincare.util.RobotoTextView
        android:layout_margin="@dimen/margin_8"
        android:id="@+id/textview_blood_group"
        android:layout_width="@dimen/margin_40"
        android:layout_height="@dimen/margin_40"
        android:gravity="center"
        android:hint="A +"
        android:textColor="@drawable/selector_bottom_sheet_text_row"
        fab:typeface="roboto_medium" />

</LinearLayout>