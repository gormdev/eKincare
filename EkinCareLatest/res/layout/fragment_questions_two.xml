<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:gravity="center|right"
            android:orientation="horizontal">

            <LinearLayout
               android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_56"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:padding="@dimen/margin_8">

                <ImageView
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_gravity="right|center"
                    android:background="@drawable/how_us_day_done"
                    android:padding="@dimen/margin_8"
                    android:scaleType="fitXY" />


                <com.ekincare.util.RalewayTextViewMedium
                    android:id="@+id/profile_next_two"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_5"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14"

                    fab:ralewaytypeface="raleway_bold" />
            </LinearLayout>

            <com.ekincare.util.RalewayTextViewMedium

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@drawable/notification_delete_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:paddingTop="@dimen/margin_5"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14"
                android:visibility="gone"

                fab:ralewaytypeface="raleway_bold" />
        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_56"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/margin_2"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/child_adult_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin_50"
            android:text="PROFILE SETUP"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20" />

        <com.ekincare.util.RalewayTextViewMedium

            style="@style/TvBlack14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_15"
            android:background="#f0174789"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_5"
            android:singleLine="true"
            android:text="Next"
            android:textColor="@color/white" />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ll_main_questions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/wizard_bg"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


        </RelativeLayout>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/wizard_next_layout"
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            fab:fab_colorNormal="@color/color_medicine"
            fab:fab_colorPressed="@color/color_medical_history"
            fab:fab_icon="@drawable/ic_arrow_next_white_48dp"
            fab:fab_title="Edit Profile"
            android:layout_gravity="bottom|right"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </FrameLayout>



</LinearLayout>
