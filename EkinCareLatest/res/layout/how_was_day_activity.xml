<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ekincare.util.RobotoTextView
                style="@style/TvBlack16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_16"
                android:singleLine="true"
                android:textColor="@color/card_first"
                android:text="@string/how_are_you_feeling_today"
                fab:typeface="roboto_medium" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/feel_happy_view"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/happy_image"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:background="@drawable/feel_happy"/>
                    <TextView
                        android:id="@+id/happy_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/card_second"
                        android:textSize="@dimen/textsize_10"
                        android:text="Happy"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feel_sad_view"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_3"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/sad_image"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:background="@drawable/feel_sad"/>
                    <TextView
                        android:id="@+id/sad_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/card_second"
                        android:textSize="@dimen/textsize_10"
                        android:text="Sad"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feel_sick_view"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_3"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/sick_image"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:background="@drawable/feel_sick"/>
                    <TextView
                        android:id="@+id/sick_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/card_second"
                        android:textSize="@dimen/textsize_10"
                        android:text="Sick"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feel_stress_view"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_3"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/stress_image"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:background="@drawable/feel_strain"/>
                    <TextView
                        android:id="@+id/stress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/card_second"
                        android:textSize="@dimen/textsize_10"
                        android:text="Stress"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feel_angry_view"
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_3"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/angry_image"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:background="@drawable/feel_angry"/>
                    <TextView
                        android:id="@+id/angry_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/card_second"
                        android:textSize="@dimen/textsize_10"
                        android:text="Angry"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                style="@style/ImgSeperatorGray"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_height="@dimen/margin_1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="horizontal"
                android:fitsSystemWindows="true">
                <ImageView
                    android:layout_width="@dimen/margin_45"
                    android:layout_height="@dimen/margin_45"
                    android:padding="@dimen/margin_10"
                    android:background="@drawable/feel_food"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <com.ekincare.util.RobotoTextView
                        style="@style/TvBlack14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:textColor="@color/card_third"
                        android:text="@string/had_coffee_today"
                        fab:typeface="roboto_regular" />
                    <ImageView
                        android:id="@+id/feel_skipmeal_no"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:scaleType="fitXY"
                        android:padding="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_10"
                        />
                    <ImageView
                        android:id="@+id/feel_skipmeal_yes"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:scaleType="fitXY"
                        android:padding="@dimen/margin_5"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_alcohol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/margin_45"
                    android:layout_height="@dimen/margin_45"
                    android:padding="@dimen/margin_10"
                    android:background="@drawable/feel_wine"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <com.ekincare.util.RobotoTextView
                        style="@style/TvBlack14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/margin_10"
                        android:layout_weight="0.5"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:textColor="@color/card_third"
                        android:text="@string/had_alcohol_today"
                        fab:typeface="roboto_regular" />
                    <ImageView
                        android:id="@+id/feel_wine_no"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:scaleType="fitXY"
                        android:padding="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_10"
                        />
                    <ImageView
                        android:id="@+id/feel_wine_yes"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:scaleType="fitXY"
                        android:padding="@dimen/margin_5"
                        />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_smoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/margin_45"
                    android:layout_height="@dimen/margin_45"
                    android:padding="@dimen/margin_10"
                    android:background="@drawable/feel_cigarette"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <com.ekincare.util.RobotoTextView
                        style="@style/TvBlack14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:textColor="@color/card_third"
                        android:text="@string/had_smoke_today"
                        fab:typeface="roboto_regular" />
                    <ImageView
                        android:id="@+id/feel_smoke_no"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:scaleType="fitXY"
                        android:padding="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_10"
                        />
                    <ImageView
                        android:id="@+id/feel_smoke_yes"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:scaleType="fitXY"
                        android:padding="@dimen/margin_5"
                        />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_10"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/margin_45"
                    android:layout_height="@dimen/margin_45"
                    android:padding="@dimen/margin_10"
                    android:background="@drawable/feel_breakfast"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <com.ekincare.util.RobotoTextView
                        style="@style/TvBlack14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:textColor="@color/card_third"
                        android:text="@string/had_ate_late_today"
                        fab:typeface="roboto_regular" />
                    <ImageView
                        android:id="@+id/feel_breakfast_no"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:scaleType="fitXY"
                        android:padding="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_10"
                        />
                    <ImageView
                        android:id="@+id/feel_breakfast_yes"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:scaleType="fitXY"
                        android:padding="@dimen/margin_5"
                        />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:fitsSystemWindows="true">
                <ImageView
                    android:layout_width="@dimen/margin_45"
                    android:layout_height="@dimen/margin_45"
                    android:padding="@dimen/margin_10"
                    android:background="@drawable/feel_bed"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <com.ekincare.util.RobotoTextView
                        style="@style/TvBlack14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/margin_10"
                        android:gravity="center|left"
                        android:textColor="@color/card_third"
                        android:text="@string/had_less_sleep_today"
                        fab:typeface="roboto_regular" />
                    <ImageView
                        android:id="@+id/feel_less_sleep_no"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:scaleType="fitXY"
                        android:padding="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_10"
                        />
                    <ImageView
                        android:id="@+id/feel_less_sleep_yes"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="@dimen/margin_35"
                        android:scaleType="fitXY"
                        android:padding="@dimen/margin_5"
                        />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin"
            android:background="@color/transparent" />


        <com.ekincare.util.RobotoTextView
            style="@style/TvBlack14"
            android:layout_width="wrap_content"
            android:fitsSystemWindows="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginLeft="@dimen/margin_16"

            android:textColor="@color/white"
            android:text="@string/we_will_use_insights"
            fab:typeface="roboto_regular" />

        <Switch
            android:id="@+id/how_was_day_notification"
            android:layout_width="@dimen/margin_250"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:drawablePadding="@dimen/margin_5"
            android:padding="@dimen/margin_15"
            android:theme="@style/AppTheme"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_14"
            android:text="@string/reminder_me_everyday"
            android:textColor="@color/white" />


    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/how_was_done"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:src="@drawable/how_us_day_done"
        app:layout_anchor="@id/main.appbar"
        app:backgroundTint="@color/green"
        app:layout_anchorGravity="bottom|right|end"
        />

</android.support.design.widget.CoordinatorLayout>