<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="1dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_7"
        android:layout_marginBottom="@dimen/margin_1"
        fab:cardBackgroundColor="@color/white"
        fab:cardCornerRadius="@dimen/margin_1" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_18"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_for_notification_type"
                        android:layout_width="@dimen/margin_40"
                        android:layout_height="@dimen/margin_40"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:paddingLeft="@dimen/margin_12"
                    android:layout_height="wrap_content">

                    <com.ekincare.util.RalewayTextViewMedium
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/light_black"
                        android:layout_weight="0.5"
                        android:gravity="center|left"
                        android:textSize="@dimen/textsize_14"
                        android:id="@+id/t1"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColor="#6D6D6D"
                        android:fontFamily="sans-serif-light"
                        android:textSize="@dimen/textsize_12"
                        android:id="@+id/t2"/>


                    <com.ekincare.util.RalewayTextViewMedium
                        android:id="@+id/date_nf"
                        android:layout_weight="0.5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textSize="@dimen/textsize_10"
                        android:textColor="@color/black"
                        fab:ralewaytypeface="raleway_medium" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:gravity="center|top"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"

                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:id="@+id/upload_records_separators"
                android:background="@color/wizard_seperatore"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:id="@+id/upload_records"
                android:paddingTop="@dimen/margin_15"
               />

        </LinearLayout>




    </android.support.v7.widget.CardView>


</LinearLayout>