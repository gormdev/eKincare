<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_8"
        android:gravity="center|left"
        android:orientation="vertical">

        <com.ekincare.util.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="@dimen/margin_16"
            android:textColor="@color/card_first"
            android:layout_weight="0.5"
            android:text="@string/insight_health_risk_title"
            android:textSize="@dimen/font_24"
            fab:typeface="roboto_medium" />
        <com.ekincare.util.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:layout_weight="0.5"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:textColor="@color/card_second"
            android:text="@string/insight_health_risk_title_description"
            android:textSize="@dimen/textsize_14"
            fab:typeface="roboto_regular" />


    </LinearLayout>

    <ListView
        android:id="@+id/insight_health_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="0dp"
         />

</LinearLayout>