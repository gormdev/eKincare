<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/full_dialog_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_ek"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:scaleType="fitCenter"
        android:paddingBottom="@dimen/margin_20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <com.ekincare.util.RobotoTextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_below="@id/imageview_ek"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_8"
            tool:text="Header"
            app:typeface="roboto_regular"
            android:background="@color/transparent"
            android:textSize="@dimen/textsize_22"
            android:textColor="@color/white"/>

        <com.ekincare.util.RobotoTextView
            android:id="@+id/textview_discription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/textview_title"
            android:textSize="@dimen/textsize_16"
            tool:text="Sub Header"
            android:background="@color/transparent"
            android:layout_margin="@dimen/margin_8"
            app:typeface="roboto_regular"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:layout_gravity="bottom"
            android:layout_below="@id/textview_discription"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8">

            <com.ekincare.util.RobotoTextView
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_25"
                android:paddingRight="@dimen/margin_25"
                android:textSize="@dimen/textsize_16"
                android:textAllCaps="true"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:textColor="@color/white"
                app:typeface="roboto_bold"/>

            <com.ekincare.util.RobotoTextView
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_25"
                android:paddingRight="@dimen/margin_25"
                android:textSize="@dimen/textsize_16"
                android:maxLines="1"
                android:textAllCaps="true"
                android:clickable="true"
                android:textColor="@color/white"
                app:typeface="roboto_bold"/>
        </LinearLayout>
    </LinearLayout>



</FrameLayout>