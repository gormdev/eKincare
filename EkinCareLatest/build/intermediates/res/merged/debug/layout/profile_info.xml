<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_8"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:paddingTop="@dimen/margin_8"
            android:gravity="center|left"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_40"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:padding="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:src="@drawable/ic_lifestyle_icon" />

            <com.ekincare.util.RobotoTextView
                style="@style/TvBlack18"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="Lifestyle Information"
                android:textColor="@color/light_gray"
                fab:typeface="roboto_medium" />



        </LinearLayout>

    </LinearLayout>
    <ImageView
        style="@style/ImgSeperatorGray"
        android:layout_height="@dimen/margin_1"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="@dimen/margin_8"
            android:baselineAligned="true"
            android:visibility="visible">

            <com.ekincare.util.RobotoTextView
                style="@style/TvBlack14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="Daily Activity"
                android:textColor="@color/card_second"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/profile_info_activity"
                style="@style/TvBlack16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/card_first"
                android:singleLine="true"
                fab:typeface="roboto_regular" />







        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_8"
            android:baselineAligned="true"
            android:visibility="visible">

            <com.ekincare.util.RobotoTextView
                style="@style/TvBlack14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="Exercise"
                android:textColor="@color/card_second"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/profile_info_exercise"
                style="@style/TvBlack16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/card_first"
                android:singleLine="true"
                fab:typeface="roboto_regular" />







        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="@dimen/margin_8"
            android:baselineAligned="true"
            android:visibility="visible">

            <com.ekincare.util.RobotoTextView

                style="@style/TvBlack14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="Alcohol"
                android:textColor="@color/card_second"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/profile_info_alcohol"
                style="@style/TvBlack16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/card_first"
                fab:typeface="roboto_regular" />







        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_8"
            android:baselineAligned="true"
            android:visibility="visible">

            <com.ekincare.util.RobotoTextView
                style="@style/TvBlack14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="Smoking"
                android:textColor="@color/card_second"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/profile_info_smoking"
                style="@style/TvBlack16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/card_first"
                android:singleLine="true"
                fab:typeface="roboto_regular" />







        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingTop="@dimen/margin_8"
            android:baselineAligned="true"
            android:visibility="visible">

            <com.ekincare.util.RobotoTextView
                style="@style/TvBlack14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="Diet"
                android:textColor="@color/card_second"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/profile_info_dite"
                style="@style/TvBlack16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/card_first"
                fab:typeface="roboto_regular" />







        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/margin_80"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_16"
            android:paddingLeft="@dimen/margin_8"
            android:baselineAligned="true"
            android:visibility="invisible">

            <com.ekincare.util.RobotoTextView
                style="@style/TvBlack14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="Weight"
                android:textColor="@color/card_second"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/profile_bio_weight"
                style="@style/TvBlack18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/card_first"
                fab:typeface="roboto_regular" />







        </LinearLayout>

    </LinearLayout>

</LinearLayout>