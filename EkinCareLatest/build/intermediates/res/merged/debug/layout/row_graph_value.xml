<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/margin_16">

        <com.ekincare.util.RobotoTextView
            android:id="@+id/TextHistoryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/card_second"
            android:text=""
            fab:typeface="roboto_regular" />

        <com.ekincare.util.RobotoTextView
            android:id="@+id/TextHistoryUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textsize_12"
            android:text=""
            android:layout_marginLeft="4dp"
            android:layout_alignBaseline="@id/TextHistoryDate"
            android:textColor="@color/light_black"
            fab:typeface="roboto_regular" />

        <com.ekincare.util.RobotoTextView
            android:id="@+id/TextHistoryResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/TextHistoryUnit"
            android:layout_alignBaseline="@id/TextHistoryDate"
            android:textStyle="bold"
            android:text=""
            android:textSize="@dimen/textsize_16"
            android:maxLength="4"
            android:textColor="@color/light_black"
            fab:typeface="roboto_regular" />
    </RelativeLayout>