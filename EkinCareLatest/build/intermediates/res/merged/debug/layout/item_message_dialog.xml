<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_ek"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_150"
        android:layout_gravity="center"
        android:src="@drawable/dialog_bot_image"
        android:scaleType="centerCrop"
        android:paddingBottom="@dimen/margin_20"/>

    <com.ekincare.util.RobotoTextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_below="@id/imageview_ek"
        android:maxLines="1"
        android:gravity="left"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_8"
        tool:text="Header"
        app:typeface="roboto_regular"
        android:background="@color/transparent"
        android:textSize="@dimen/textsize_18"
        android:textColor="@color/card_first"/>

    <com.ekincare.util.RobotoTextView
        android:id="@+id/textview_discription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/textview_title"
        android:textSize="@dimen/textsize_12"
        tool:text="Sub Header"
        android:background="@color/transparent"
        android:layout_margin="@dimen/margin_8"
        app:typeface="roboto_regular"
        android:textColor="@color/card_second"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="bottom"
        android:layout_below="@id/textview_discription"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8">

        <com.ekincare.util.RobotoTextView
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tool:text="Button2"
            android:padding="@dimen/margin_16"
            android:textSize="@dimen/textsize_14"
            android:textAllCaps="true"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/colorPrimary"
            app:typeface="roboto_regular"/>

        <com.ekincare.util.RobotoTextView
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="@dimen/margin_16"
            android:textSize="@dimen/textsize_14"
            tool:text="button1"
            android:maxLines="1"
            android:textAllCaps="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/colorPrimary"
            app:typeface="roboto_regular"/>
    </LinearLayout>
</RelativeLayout>