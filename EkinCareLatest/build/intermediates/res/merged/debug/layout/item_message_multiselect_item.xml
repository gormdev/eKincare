<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_multi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_8"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/margin_4">

    <com.ekincare.util.RobotoTextView
        android:id="@+id/textview_cart_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/margin_8"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:text="Thyroid Profile"
        android:textColor="@color/card_first"
        android:textSize="@dimen/textsize_16"
        app:typeface="roboto_regular" />

    <com.message.view.CircleCheckBox
        android:id="@+id/image_selected"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_8"
        app:borderThickness="1dp"
        android:layout_marginRight="@dimen/margin_8"
        app:circleBorderColor="#00CFAD"
        app:innerCircleColor="#00CFAD"
        app:innerCircleRadius="10dp"
        app:outerCircleColor="#6400CFAD"
        app:outerCircleRadius="5dp"
        app:showOuterCircle="true"
        app:textColor="#000000"
        app:tickColor="#ffffff"
        app:tickThickness="1dp" />

</LinearLayout>
