<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_24"
        android:orientation="vertical" >

        <com.ekincare.util.RobotoTextView
            android:id="@+id/dialog_title"
            style="@style/TvBlack20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:textSize="@dimen/font_20"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Add Vaccinations"
            fab:typeface="roboto_medium" />

        <com.ekincare.util.RalewayTextViewMedium
            style="@style/TvBlack14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Date" />

        <com.ekincare.util.RalewayTextViewMedium
            android:id="@+id/txtDate"
            style="@style/TvBlack14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:singleLine="true"
            android:text="Enter the date of Vaccinations"
            android:textColor="@color/light_gray" />

        <ImageView style="@style/ImgSeperatorGray" />

        <com.ekincare.util.RalewayTextViewMedium
            android:id="@+id/tv_lable"
            style="@style/TvBlack14"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:gravity="left"
            android:text="If you don't remember the date, please choose one from below"
            android:textColor="@color/black_semi_transparent"
            fab:ralewaytypeface="raleway_bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <com.ekincare.util.RalewayTextViewMedium
                android:id="@+id/txtThisMonth"
                style="@style/BloodTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="This month"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/textsize_14" />

            <com.ekincare.util.RalewayTextViewMedium
                android:id="@+id/txtThisYear"
                style="@style/BloodTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="This Year"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/textsize_14" />

            <com.ekincare.util.RalewayTextViewMedium
                android:id="@+id/txtMoreThanYear"
                style="@style/BloodTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="More than a year ago"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:paddingBottom="@dimen/margin_8"
        android:paddingRight="@dimen/margin_8"
        android:paddingTop="@dimen/margin_8"
        android:paddingLeft="@dimen/margin_24"
        android:layout_below="@+id/dateLayout" >


        <com.ekincare.util.RalewayTextViewMedium
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_35"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_8"
            android:text="Cancel"
            android:padding="@dimen/margin_8"
            android:textSize="@dimen/font_16"
            android:textColor="@color/teal"
            android:textAllCaps="true"
            android:clickable="true"
            fab:typeface="roboto_medium"
            android:background="?attr/selectableItemBackground"  />

        <com.ekincare.util.RalewayTextViewMedium
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_35"
            android:gravity="center"
            android:padding="@dimen/margin_8"
            android:textSize="@dimen/font_16"
            android:text="Save"
            android:layout_marginRight="@dimen/margin_8"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:textAllCaps="true"
            fab:typeface="roboto_medium"
            android:textColor="@color/teal" />
    </LinearLayout>

</RelativeLayout>