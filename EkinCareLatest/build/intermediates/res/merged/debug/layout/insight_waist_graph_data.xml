<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <com.ekincare.util.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:padding="@dimen/margin_16"
        android:textColor="@color/card_first"
        android:text="@string/insight_waist_title"
        android:textSize="@dimen/font_24"
        fab:typeface="roboto_medium" />
    <com.ekincare.util.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:textColor="@color/card_second"
        android:text="@string/insight_waist_title_description"
        android:textSize="@dimen/textsize_14"
        fab:typeface="roboto_regular" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_height="@dimen/margin_200"
            android:orientation="vertical">
            <com.ekincare.util.VerticalTextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:text="Waist"
                android:textSize="@dimen/textsize_14"
                android:gravity="center_horizontal"
                android:textColor="@color/card_first"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_waist_graph"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="@dimen/margin_200" />
    </LinearLayout>
    <com.ekincare.util.RobotoTextView
        fab:typeface="roboto_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Age"
        android:textColor="@color/card_first"
        android:textSize="@dimen/textsize_14" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/margin_20"
        android:gravity="left"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waist_male_layout"
            android:gravity="center|left"
            android:orientation="horizontal">

            <com.ekincare.util.RobotoTextView
                fab:typeface="roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="@dimen/margin_5"
                android:text="Avg male"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_10" />

            <ImageView
                android:layout_width="@dimen/margin_5"
                android:layout_height="@dimen/margin_5"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@color/colorPrimary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waist_female_layout"
            android:gravity="center|left"
            android:orientation="horizontal">

            <com.ekincare.util.RobotoTextView
                fab:typeface="roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="@dimen/margin_5"
                android:text="Avg female"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_10" />

            <ImageView
                android:layout_width="@dimen/margin_5"
                android:layout_height="@dimen/margin_5"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@color/colorPrimary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/margin_8"
            android:orientation="horizontal">

            <com.ekincare.util.RobotoTextView
                fab:typeface="roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="@dimen/margin_5"
                android:text="You"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_10" />

            <ImageView
                android:layout_width="@dimen/margin_5"
                android:layout_height="@dimen/margin_5"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_5"
                android:background="@color/green" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>