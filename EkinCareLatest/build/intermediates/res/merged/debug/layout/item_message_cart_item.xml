<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:layout_margin="@dimen/margin_8">

        <com.ekincare.util.RobotoTextView
            android:id="@+id/textview_cart_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="Thyroid Profile"
            android:textColor="#8a8a8a"
            android:textSize="@dimen/textsize_16"
            fab:typeface="roboto_regular" />

        <com.ekincare.util.RobotoTextView
            android:id="@+id/textview_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:text="Rs 231/-"
            android:layout_marginLeft="@dimen/margin_8"
            android:textColor="@color/card_first"
            android:textSize="@dimen/textsize_16"
            fab:typeface="roboto_regular" />

    </LinearLayout>

    <View
        android:id="@+id/divider_for_med"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"/>

</LinearLayout>
