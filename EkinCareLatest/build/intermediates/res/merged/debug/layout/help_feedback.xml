<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical" >

    <TextView
        style="@style/settingsTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_15"
        android:textSize="@dimen/textsize_14"
        android:text="App Notifications"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_56"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <Switch
            android:id="@+id/app_custom_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:drawablePadding="@dimen/margin_8"
            android:checked="false"
            android:padding="@dimen/margin_15"
            android:theme="@style/AppTheme"
            android:text="Turn off all notifications"
            android:background ="@drawable/border_bottom"
            android:textColor="@color/black_semi_transparent" />



    </LinearLayout>


        <TextView
            style="@style/settingsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:textSize="@dimen/textsize_14"
            android:text="Water Consumption"
            android:textStyle="bold"
            />


      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_56"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
          android:visibility="gone">

            <Switch
                android:id="@+id/hydrocare_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:drawablePadding="@dimen/margin_8"
                android:padding="@dimen/margin_15"
                android:theme="@style/AppTheme"
                android:text="Track water consumption"
                android:background ="@drawable/border_bottom"
                android:textColor="@color/black_semi_transparent" />



        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_56"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <Switch
                android:id="@+id/hydrocare_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:drawablePadding="@dimen/margin_8"
                android:padding="@dimen/margin_15"
                 android:theme="@style/AppTheme"
                android:text="Remind me"
                 android:background ="@drawable/border_bottom"
                android:textColor="@color/black_semi_transparent" />
        </LinearLayout>

        <TextView
            style="@style/settingsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:textSize="@dimen/textsize_14"
            android:textStyle="bold"
            android:text="@string/blood_sos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_56"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <Switch
                android:id="@+id/bloodSOS_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:drawablePadding="@dimen/margin_8"
                 android:background ="@drawable/border_bottom"
                android:padding="@dimen/margin_15"
                 android:theme="@style/AppTheme"
                android:text="BloodSOS App"
                android:textColor="@color/black_semi_transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_56"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <Switch
                android:id="@+id/bloodSOS_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:background ="@drawable/border_bottom"
                android:layout_marginLeft="@dimen/margin_10"
                android:drawablePadding="@dimen/margin_8"
                android:padding="@dimen/margin_15"
                 android:theme="@style/AppTheme"
                android:text="BloodSOS Notifications"
                android:textColor="@color/black_semi_transparent" />
        </LinearLayout>

        <TextView
            android:id="@+id/dataUsage"
            style="@style/settingsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15"
            android:textSize="@dimen/textsize_14"
            android:text="@string/dataUsage"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_56"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <Switch
                android:id="@+id/wifiAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:drawablePadding="@dimen/margin_8"
                 android:background ="@drawable/border_bottom"
                android:padding="@dimen/margin_15"
                 android:theme="@style/AppTheme"
                android:text="@string/wifiOnlySetting"
                android:textColor="@color/black_semi_transparent" />
        </LinearLayout>

</LinearLayout>