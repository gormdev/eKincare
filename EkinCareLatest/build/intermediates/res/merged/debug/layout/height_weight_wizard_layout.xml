<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center|top"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <com.ekincare.util.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:textColor="@color/card_first"
        android:textSize="@dimen/textsize_22"
        android:text="@string/how_much_do_you_weight"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/margin_50"
        fab:typeface="roboto_regular" />
    <com.ekincare.util.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:textColor="@color/card_second"
        android:textSize="@dimen/textsize_16"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/height_weight_recommended"
        android:gravity="center|left"
        fab:typeface="roboto_regular" />
    <LinearLayout
        android:id="@+id/wizerd_weight_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:addStatesFromChildren="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_30"
            android:clickable="false"
            android:orientation="horizontal"
            >
            <com.ekincare.util.RobotoTextView
                android:id="@+id/weight_wizard_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_30"
                android:clickable="false"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/weight_wizard_value_dimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_8"
                android:gravity="bottom"
                android:textColor="@color/card_second"
                android:textSize="@dimen/textsize_14"
                android:clickable="false"
                fab:typeface="roboto_regular" />
        </LinearLayout>
        <View
            android:id="@+id/weight_wizard_value_underline"
            android:layout_width="@dimen/margin_120"
            android:layout_height="@dimen/margin_1"
            android:clickable="false"
            android:layout_below="@+id/weight_wizard_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimary" />
    </LinearLayout>

    <com.ekincare.util.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:textColor="@color/card_first"
        android:textSize="@dimen/textsize_22"
        android:text="@string/what_your_height"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/margin_30"
        fab:typeface="roboto_regular" />
    <com.ekincare.util.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:textColor="@color/card_second"
        android:textSize="@dimen/textsize_16"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/height_weight_recommended"
        android:gravity="center|left"
        fab:typeface="roboto_regular" />

    <LinearLayout
        android:id="@+id/wizerd_height_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:addStatesFromChildren="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_30"
            android:clickable="false"
            android:orientation="horizontal"
            >
            <com.ekincare.util.RobotoTextView
                android:id="@+id/height_feet_value_wizard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_30"
                android:clickable="false"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/height_feet_value_wizard_dimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_8"
                android:gravity="bottom"
                android:textColor="@color/card_second"
                android:textSize="@dimen/textsize_14"
                android:clickable="false"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/height_inch_value_wizard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/margin_10"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_30"
                android:clickable="false"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/height_inch_value_wizard_dimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_8"
                android:gravity="bottom"
                android:clickable="false"
                android:textColor="@color/card_second"
                android:textSize="@dimen/textsize_14"
                fab:typeface="roboto_regular" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/margin_120"
            android:layout_height="@dimen/margin_1"
            android:layout_below="@+id/weight_wizard_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:clickable="false"
            android:background="@color/colorPrimary" />
    </LinearLayout>





</LinearLayout>