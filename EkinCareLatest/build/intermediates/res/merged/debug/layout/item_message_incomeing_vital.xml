<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_16"
    android:layout_marginTop="@dimen/margin_16"
    android:layout_marginBottom="@dimen/margin_16">

    <FrameLayout
        android:id="@+id/view_group_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/margin_8"
        >

        <ImageView
            android:id="@+id/image_view_avatar"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:src="@drawable/icons_chat_logo" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="@dimen/margin_250"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/view_group_avatar"
        android:background="@color/card_background_first"

        android:layout_marginBottom="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_2"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/card_background_second"
            android:gravity="top"
            android:padding="@dimen/margin_8"
            android:orientation="horizontal">

            <com.ekincare.util.RobotoTextView
                android:id="@+id/vital_lable_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAllCaps="true"
                android:layout_weight="0.5"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_16"
                fab:typeface="roboto_regular"/>

            <com.ekincare.util.RobotoTextView
                android:id="@+id/vital_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/card_second"
                android:textSize="@dimen/textsize_12"
                fab:typeface="roboto_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:padding="@dimen/margin_16"
            android:orientation="horizontal"
            >
            <com.ekincare.util.RobotoTextView
                android:id="@+id/vital_value_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_30"
                android:clickable="false"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/vital_dimension_valu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_4"
                android:gravity="bottom"
                android:textColor="@color/card_second"
                android:textSize="@dimen/textsize_12"
                android:clickable="false"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/vital_value_lable_inches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/card_first"
                android:textSize="@dimen/textsize_30"
                android:layout_marginLeft="@dimen/margin_4"
                android:clickable="false"
                fab:typeface="roboto_regular" />
            <com.ekincare.util.RobotoTextView
                android:id="@+id/vital_dimension_valu_inches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_4"
                android:gravity="bottom"
                android:textColor="@color/card_second"
                android:textSize="@dimen/textsize_12"
                android:clickable="false"
                fab:typeface="roboto_regular" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

